#ifndef GCSPACEINFO_H_
#define GCSPACEINFO_H_

namespace Bee {
class GCSpaceInfo {
protected:
	ulong * contents;
	ulong at(ulong *);
	ulong atPut(ulong *, ulong);

public:
	ulong * base();
	void base(ulong *);
	ulong * base_3();
	void base_3(ulong *);
	ulong * commitedLimit();
	void commitedLimit(ulong *);
	void contents(ulong *);
	ulong * nextFree();
	void nextFree(ulong *);
	ulong * reservedLimit();
	void reservedLimit(ulong *);
	ulong * softLimit();
	void softLimit(ulong *);

	static ulong sizeInBytes = 24;
	static GCSpace currentTo();
	static GCSpace old();
	static GCSpace dynamicNew(unsigned long size);
};

}

#endif /* GCSPACEINFO_H_ */
