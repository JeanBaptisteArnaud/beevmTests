#ifndef GCSPACE_H_
#define GCSPACE_H_
#include "GCSpaceInfo.h"
#include "VMMemory.h"

namespace Bee {
class GCSpace {
protected:
	GCSpaceInfo *info;
	ulong base;
	ulong nextFree;
	ulong commitedLimit;
	ulong reservedLimit;
	ulong softLimit;
	ulong base_3;
	ulong regionBase;


public:
	// accessor
	ulong getBase();
	ulong getNextFree();
	ulong getCommitedLimit();
	ulong getReservedLimit();
	ulong getSoftLimit();


	GCSpace();
	void load(void);
	void save();
	bool includes(ulong * pointer);
	void loadFrom(GCSpace from);
	void reset();
	ulong * allocate(ulong size);
	void setInfo(GCSpaceInfo * pointer);
	ulong* shallowCopy(ulong *pointer);
	ulong * shallowCopyGrowing(ulong * array , ulong grow);
	static GCSpace currentFrom();
	static GCSpace currentTo();
	static GCSpace old();
	static GCSpace dynamicNew(ulong size);
};

}

#endif /* GCSPACE_H_ */
